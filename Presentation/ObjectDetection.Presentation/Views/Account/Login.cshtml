@model ObjectDetection.Presentation.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(to right, #a18cd1, #fbc2eb);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .auth-box {
            background: white;
            padding: 60px 30px;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            width: 400px;
            height: 550px;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .auth-box h2 {
                color: #5e5ce6;
                margin-top: 0;
                margin-bottom: 10px;
            }

            .auth-box p {
                color: #999;
                margin-bottom: 30px;
                font-size: 14px;
            }

        form {
            display: flex;
            flex-direction: column;
            gap: 20px;
            width: 100%;
            margin-bottom: 20px;
        }

        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 15px;
            outline: none;
        }

        input[type="checkbox"] {
            margin-right: 8px;
        }

        .checkbox-label {
            display: flex;
            align-items: center;
            justify-content: start;
            font-size: 14px;
            color: #333;
        }

        button {
            width: 100%;
            padding: 12px;
            background: linear-gradient(to right, #667eea, #764ba2);
            border: none;
            border-radius: 8px;
            color: white;
            font-weight: bold;
            font-size: 16px;
            cursor: pointer;
            transition: 0.3s;
        }

            button:hover {
                opacity: 0.9;
            }

        a {
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
        }

        .text-danger {
            font-size: 12px;
            color: red;
            text-align: left;
        }

        .footer-text {
            color: #666;
            font-size: 14px;
            margin-top: 25px;
        }
    </style>
</head>
<body class="login-page">
    <div class="auth-box">
        <h2>Sign in</h2>
        <p>Welcome back! Please Sign in to continue.</p>

        <form asp-action="Login" method="post">
            <div>
                <input asp-for="Email" placeholder="Email address" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div>
                <input asp-for="Password" placeholder="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="checkbox-label">
                <input asp-for="RememberMe" type="checkbox" />
                <label asp-for="RememberMe">Remember Me</label>
            </div>

            <button type="submit">Sign in</button>
        </form>

        <p class="footer-text">
            Don't have an account?
            <a asp-controller="Account" asp-action="Register">Sign up</a>
        </p>
    </div>
</body>
</html>