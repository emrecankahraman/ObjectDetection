@model ObjectDetection.Presentation.Models.ImageUploadViewModel

@{
    ViewData["Title"] = "Upload & Search";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upload & Search</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(to right, #a18cd1, #fbc2eb);
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            background-color: white;
            padding: 20px;
            color: black;
            overflow-y: auto;
            box-shadow: 5px 0 15px rgba(0, 0, 0, 0.1);
            transform: translateX(-100%);
            transition: transform 0.3s ease;
            z-index: 1000;
            padding-top: 60px;
        }

            .sidebar.active {
                transform: translateX(0);
            }

            .sidebar h3 {
                color: #5e5ce6;
                margin-bottom: 15px;
            }

            .sidebar img {
                width: 100%;
                height: 150px;
                object-fit: cover;
                border-radius: 8px;
                margin-bottom: 10px;
            }

        .close-sidebar {
            position: absolute;
            top: 15px;
            right: 15px;
            background: none;
            border: none;
            font-size: 20px;
            cursor: pointer;
            color: #5e5ce6;
        }

        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 60px 20px;
            margin-left: 0;
            transition: margin-left 0.3s ease;
        }

        .sidebar.active ~ .main-content {
            margin-left: 250px;
        }

        .upload-box {
            background: white;
            padding: 40px 30px;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
            text-align: center;
            margin-bottom: 30px;
        }

            .upload-box h2 {
                color: #5e5ce6;
                margin-bottom: 20px;
            }

        .form-section {
            display: flex;
            flex-direction: column;
            gap: 15px;
            width: 100%;
        }

            .form-section input[type="text"],
            .form-section button {
                width: 100%;
                padding: 12px;
                border: 1px solid #ddd;
                border-radius: 8px;
                font-size: 15px;
                outline: none;
            }

            .form-section button {
                background: linear-gradient(to right, #667eea, #764ba2);
                border: none;
                color: white;
                font-weight: bold;
                cursor: pointer;
                transition: 0.3s;
            }

                .form-section button:hover {
                    opacity: 0.9;
                }

        .file-upload-wrapper {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            gap: 12px;
            margin-bottom: 15px;
        }

        .file-label {
            background: #5e5ce6;
            color: white;
            padding: 10px 16px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
        }

            .file-label:hover {
                background: #4b4bd1;
            }

        .file-name {
            font-size: 14px;
            color: #333;
            margin-left: 12px;
            max-width: 200px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .result-section {
            background: white;
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 800px;
            margin-top: 20px;
        }

            .result-section h3 {
                color: #5e5ce6;
                text-align: center;
            }

        .result-list {
            list-style-type: none;
            padding-left: 0;
            margin-top: 15px;
        }

            .result-list li {
                padding: 12px;
                background-color: #f9f9f9;
                border: 1px solid #ddd;
                border-radius: 8px;
                margin-bottom: 12px;
            }

            .result-list strong {
                color: #5e5ce6;
            }

            .result-list img {
                margin-top: 8px;
                width: 150px;
                height: 150px;
                object-fit: cover;
                border-radius: 8px;
            }

        .hamburger-btn {
            position: fixed;
            top: 15px;
            left: 15px;
            background: white;
            border: none;
            font-size: 24px;
            cursor: pointer;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            z-index: 999;
        }

        .user-dropdown {
            position: fixed;
            top: 15px;
            right: 15px;
            z-index: 999;
        }

        .user-icon-btn {
            background: white;
            color: #5e5ce6;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            font-size: 20px;
            cursor: pointer;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            background-color: white;
            min-width: 120px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1000;
            border-radius: 8px;
            overflow: hidden;
        }

            .dropdown-content a {
                color: #5e5ce6;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                font-weight: bold;
                text-align: center;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1;
                }

        .user-dropdown:hover .dropdown-content {
            display: block;
        }

        .uploaded-image-container {
            display: flex;
            justify-content: center;
            margin-top: 15px;
        }

            .uploaded-image-container img {
                width: 300px;
                height: 300px;
                object-fit: cover;
                border-radius: 8px;
            }
    </style>
</head>
<body>
    <button id="toggle-sidebar" class="hamburger-btn">☰</button>
    <div class="user-dropdown">
        <button class="user-icon-btn">👤</button>
        <div class="dropdown-content">
            <a href="/Account/Logout">Logout</a>
        </div>
    </div>

    <div id="sidebar" class="sidebar">
        <button id="close-sidebar" class="close-sidebar">✕</button>
        <h3>📁 Your Uploaded Images</h3>
        @if (Model.UserImages != null && Model.UserImages.Any())
        {
            foreach (var img in Model.UserImages)
            {
                <img src="@img.Path" alt="@img.FileName" />
            }
        }
    </div>

    <div class="main-content">
        <div class="upload-box">
            <h2>📤 Upload Image & 🔍 Search</h2>
            <div class="form-section">
                <form asp-controller="Image" asp-action="Search" method="get">
                    <input type="text" name="query" value="@Model.SearchQuery" placeholder="e.g. white car, dog, istanbul" />
                    <button type="submit">Search</button>
                </form>

                <form asp-action="Upload" asp-controller="Image" method="post" enctype="multipart/form-data">
                    <div class="file-upload-wrapper">
                        <label class="file-label">
                            📎 Choose File
                            <input type="file" name="ImageFile" hidden onchange="showFileName(this)">
                        </label>
                        <span id="file-name" class="file-name">No file selected</span>
                    </div>
                    <button type="submit">Analyze</button>
                </form>
            </div>
        </div>

        @if (Model.UploadedImagePath != null)
        {
            <div class="result-section">
                <h3>Uploaded Image</h3>
                <div class="uploaded-image-container">
                    <img src="@Model.UploadedImagePath" alt="Uploaded Image" />
                </div>
            </div>
        }

        @if (Model.Results != null && Model.Results.Any())
        {
            <div class="result-section">
                <h3>🧠 Detection Results</h3>
                <ul class="result-list">
                    @foreach (var result in Model.Results)
                    {
                        var rgb = result.DominantColorRgb != null && result.DominantColorRgb.Count == 3
                        ? $"rgb({result.DominantColorRgb[0]}, {result.DominantColorRgb[1]}, {result.DominantColorRgb[2]})"
                        : "gray";

                        <li>
                            <strong>@result.Class</strong> — Score: @result.Score
                            | Color: <span style="color:@rgb">@result.ColorName</span>
                        </li>
                    }
                </ul>
            </div>
        }



        @if (Model.SearchResults != null && Model.SearchResults.Any())
        {
            <div class="result-section">
                <h3>🔍 Search Results</h3>
                <ul class="result-list">
                    @foreach (var item in Model.SearchResults.Where(x => x.UserId == Model.CurrentUserId))
                    {
                        <li>
                            <strong>@item.FileName</strong><br />
                            Tags: @string.Join(", ", item.Labels)<br />
                            Colors: @string.Join(", ", item.Colors)<br />
                            City: @item.City<br />
                            <img src="@item.Path" alt="@item.FileName" />
                        </li>
                    }
                </ul>
            </div>
        }
    </div>

    <script>
        const toggleBtn = document.getElementById("toggle-sidebar");
        const sidebar = document.getElementById("sidebar");
        const closeBtn = document.getElementById("close-sidebar");

        toggleBtn.addEventListener("click", () => {
            sidebar.classList.toggle("active");
        });

        closeBtn.addEventListener("click", () => {
            sidebar.classList.remove("active");
        });

        function showFileName(input) {
            const fileName = input.files[0] ? input.files[0].name : 'No file selected';
            document.getElementById('file-name').textContent = fileName;
        }
    </script>
</body>
</html>